#!/usr/bin/env bash

# Copyright (C) Lightbend Inc. <https://www.lightbend.com>

# Lib for CI scripts

set -e
set -o pipefail

# Travis uses a detached HEAD during builds
# CURRENT_BRANCH is used when updating Whitesource to determine the correct project name
export CURRENT_BRANCH=${TRAVIS_BRANCH}

EXTRA_OPTS="-Dakka.test.timefactor=10"

#
if [ "$TRAVIS_EVENT_TYPE" = "cron" ]; then
# Previously, we would run the cron jobs against the latest Akka master.
# Since that is not reliably (https://github.com/lagom/lagom/issues/3046),
# let's test against the latest Akka version instead:
#    AKKA_VERSION=$(curl -s https://repo.akka.io/snapshots/com/typesafe/akka/akka-actor_2.12/ | grep -oEi '2\.5-[0-9]{8}-[0-9]{6}' | sort | tail -n 1)
    AKKA_VERSION=$(curl -q https://repo1.maven.org/maven2/com/typesafe/akka/akka-actor_2.12/maven-metadata.xml | grep latest | sed -e "s/<\/\?latest>//g" | tr -d " ")

    echo "Using Akka SNAPSHOT ${AKKA_VERSION}"

    EXTRA_OPTS="${EXTRA_OPTS} -Dlagom.build.akka.version=${AKKA_VERSION}"
fi

checkIfShouldSkip() {
  if [ "$TRAVIS_EVENT_TYPE" = "cron" ]; then
    echo "SKIPPING TESTS FOR $@"
    exit
  fi
}

runSbt() {
  sbt ${EXTRA_OPTS} --warn -jvm-opts .travis-jvmopts 'set concurrentRestrictions in Global += Tags.limitAll(1)' "$@"
}

runSbtNoisy() {
  sbt ${EXTRA_OPTS} -jvm-opts .travis-jvmopts 'set concurrentRestrictions in Global += Tags.limitAll(1)' "$@"
}


printMessage() {
  echo "[info]"
  echo "[info] ---- $1"
  echo "[info]"
}
